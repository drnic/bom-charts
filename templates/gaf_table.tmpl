<p>From {{.From}} to {{.Till}}:</p>
<table border=1>
  <tr>
    <th>Area</th>
    <th>Surface, Vis &amp; Wx</th>
    <th>Cloud, Icing, & Turbulance</th>
    <th rows=2>Freezing level</th>
  </tr>
  {{range .Areas}}
    {{$areaID := .ID}}
    {{$wxConds := .WxCond | len}}
    {{$freezingLevel := .FreezingLevel}}
    {{range $index, $wxCond := .WxCond}}
    <tr>
      {{if $index}}
      <td>{{$wxCond.SurfaceVisWx.Text}}</td>
      <td>
        {{range $wxCond.CloudIceTurbulence}}{{.Text}}<br/>{{end}}
      </td>
      {{else}}
      <td rowspan={{$wxConds}}>{{$areaID}}</td>
      <td>{{$wxCond.SurfaceVisWx.Text}}</td>
      <td>
        {{range $wxCond.CloudIceTurbulence}}{{.Text}}<br/>{{end}}
      </td>
      <td rowspan={{$wxConds}}>{{$freezingLevel}}</td>
      {{end}}
    </tr>
    {{end}}
  {{end}}
</table>
